permission "request" "terminal"
save_limit = "Scratch.vm.runtime.frameLoop.framerate".eval
terminal "system runtime fps_limit 10"
can = false
timetemp = null
window "responsive" true
exit_txt = "Click to exit"
p = second - 1
window "maximise"
mainloop:
window "dimensions" screensize_x screensize_y
if mouse_down (
  if can (
    can = "exit"
  )
) else (
  if can == "exit" (
    terminal "system runtime fps_limit ".append(save_limit)
    window "stop"
  ) else (
    can = true
  )
)
if second != p (
  square window_width window_height 10 : c#000
  p = second
  time = hour ++ ":" ++ minute ++ ":" ++ second
  goto time.len * -20 0
  c #aaa
  text time 40
  goto exit_txt.len * -5 -100
  c #777
  text exit_txt 10
)
